<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_doctor_specialty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/text_style"
        android:gravity="center"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="Сімейний ліккар  "
        android:textColor="@color/my_custom_text_color"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_is_active"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_check_is_active"
        android:gravity="center"

        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text=" Сімейний лікар "
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:drawableEndCompat="@drawable/ic_chek"
        app:layout_constraintBottom_toBottomOf="@+id/tv_doctor_specialty"
        app:layout_constraintEnd_toEndOf="@+id/tv_doctor_specialty"
        app:layout_constraintStart_toStartOf="@+id/tv_doctor_specialty"
        app:layout_constraintTop_toTopOf="@+id/tv_doctor_specialty" />

</androidx.constraintlayout.widget.ConstraintLayout>